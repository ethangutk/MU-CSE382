<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZipcodesApp.MainPage">

    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="City: "/>
            <Entry x:Name="cityEntry" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="State: "/>
            <Entry x:Name="stateEntry" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <Button x:Name="lookupButton" Text="Search" Clicked="lookupButton_Clicked"/>
        <ListView x:Name="resultsList"/>
    </StackLayout>

</ContentPage>
