<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkLog.Settings">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Display totals: "/>
                <Picker x:Name="displayListSetting" WidthRequest="200" PropertyChanged="displayListSetting_PropertyChanged"/>
            </StackLayout>
            <Button Text="Credits" x:Name="redirectToCreditsButton" Clicked="redirectToCreditsButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>